<!DOCTYPE html>
<html>
<head>
  <title>My Items - PC Builds</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-gray-900 text-white font-roboto">
  <!-- Sidebar -->
  <div class="sidebar fixed inset-y-0 left-0 w-64 bg-gray-800 transform transition-transform duration-300 ease-in-out z-50 md:translate-x-0 -translate-x-full" id="sidebar">
    <div class="p-4">
      <a href="/" class="text-2xl font-bold text-white">PC Builds</a>
    </div>
    <nav class="mt-4">
      <a href="/" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white">
        <i class="fas fa-compass mr-2"></i> Explore
      </a>
      <% if (user) { %>
        <a href="/create" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white">
          <i class="fas fa-plus-circle mr-2"></i> Create
        </a>
        <a href="/my-items" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white">
          <i class="fas fa-box mr-2"></i> My Items
        </a>
        <a href="/users" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white">
          <i class="fas fa-users mr-2"></i> Users
        </a>
        <a href="/logout" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white">
          <i class="fas fa-sign-out-alt mr-2"></i> Logout
        </a>
        <div class="mt-4 px-4 text-gray-400 text-sm">
          <i class="fas fa-user mr-2"></i> Logged in as <%= user.name %>
        </div>
      <% } else { %>
        <a href="/login" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white">
          <i class="fas fa-sign-in-alt mr-2"></i> Login
        </a>
      <% } %>
    </nav>
  </div>

  <!-- Mobile Menu Button -->
  <div class="md:hidden fixed top-4 left-4 z-50">
    <button id="menu-toggle" class="text-white focus:outline-none">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Main Content -->
  <div class="main-content md:ml-64 p-6 min-h-screen">
    <h1 class="text-3xl font-bold mb-6">My Items</h1>
    <% if (!user) { %>
      <p class="text-gray-400">Please <a href="/login" class="text-blue-400 hover:underline">log in</a> to view your items.</p>
    <% } else if (userItems.length === 0) { %>
      <p class="text-gray-400">You haven't created any items yet. <a href="/create" class="text-blue-400 hover:underline">Create one now!</a></p>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
        <% userItems.forEach(item => { %>
          <div class="part-card bg-gray-800 p-4 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
            <a href="/part/<%= item.id %>">
              <img src="<%= item.thumbnail || 'https://via.placeholder.com/300x200' %>" alt="<%= item.name %>" class="w-full h-40 object-cover rounded-md mb-3">
            </a>
            <div class="part-card-content">
              <a href="/part/<%= item.id %>">
                <h3 class="text-lg font-medium text-white truncate hover:text-blue-400 transition-colors duration-200"><%= item.name %></h3>
              </a>
              <div class="space-y-1 mt-2">
                <div class="flex justify-between text-sm">
                  <span class="text-gray-400">Type:</span>
                  <span class="text-gray-400 capitalize"><%= item.type %></span>
                </div>
                <div class="flex justify-between text-sm">
                  <span class="text-gray-300">By:</span>
                  <span class="text-gray-300"><%= item.user %></span>
                </div>
                <div class="flex justify-between text-sm">
                  <span class="text-green-400">Price:</span>
                  <span class="text-green-400">$<%= item.price %></span>
                </div>
                <% if (item.extraDetails && item.extraDetails.length > 0) { %>
                  <% const firstDetail = item.extraDetails[0]; %>
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-400"><%= firstDetail.name %>:</span>
                    <span class="text-gray-400">
                      <% if (firstDetail.value.startsWith('http://') || firstDetail.value.startsWith('https://') || firstDetail.value.startsWith('tg://')) { %>
                        <a href="<%= firstDetail.value %>" target="_blank" rel="noopener noreferrer" class="text-blue-400 hover:underline break-all"><%= firstDetail.value %></a>
                      <% } else { %>
                        <%= firstDetail.value %>
                      <% } %>
                    </span>
                  </div>
                <% } %>
                <% if (item.hashtags && item.hashtags.length > 0) { %>
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-400">Hashtags:</span>
                    <span class="text-gray-400 hashtag-links">
                      <% item.hashtags.forEach((tag, index) => { %>
                        <a href="/hashtag/<%= encodeURIComponent(tag.replace('#', '').trim()) %>" class="text-blue-400 hover:underline"><%= tag %></a><% if (index < item.hashtags.length - 1) { %>,Â <% } %>
                      <% }); %>
                    </span>
                  </div>
                <% } %>
              </div>
              <!-- Stylish Edit Button -->
              <div class="mt-3">
                <a href="/edit-part/<%= item.id %>" class="edit-button inline-block bg-blue-600 text-white text-sm font-medium px-4 py-2 rounded-md hover:bg-blue-700 transition-colors duration-200">Edit</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <!-- JavaScript for Mobile Menu Toggle -->
  <script>
    const menuToggle = document.getElementById('menu-toggle');
    const sidebar = document.getElementById('sidebar');
    menuToggle.addEventListener('click', () => {
      sidebar.classList.toggle('-translate-x-full');
    });
  </script>
</body>
</html>