<!DOCTYPE html>
<html>
<head>
  <title>Users - PC Builds</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-gray-900 text-white font-roboto">

  <!-- Sidebar -->
  <div class="sidebar fixed inset-y-0 left-0 w-64 bg-gray-800 transform transition-transform duration-300 ease-in-out z-50 md:translate-x-0 -translate-x-full" id="sidebar">
    <div class="p-4">
      <a href="/" class="text-2xl font-bold text-white">PC Builds</a>
    </div>
    <nav class="mt-4">
      <a href="/" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white">
        <i class="fas fa-compass mr-2"></i> Explore
      </a>
      <% if (user) { %>
        <a href="/create" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white">
          <i class="fas fa-plus-circle mr-2"></i> Create
        </a>
        <a href="/my-items" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white">
          <i class="fas fa-box mr-2"></i> My Items
        </a>
        <a href="/users" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white">
          <i class="fas fa-users mr-2"></i> Users
        </a>
        <a href="/logout" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white">
          <i class="fas fa-sign-out-alt mr-2"></i> Logout
        </a>
        <div class="mt-4 px-4 text-gray-400 text-sm">
          <i class="fas fa-user mr-2"></i> Logged in as <%= user.name %>
        </div>
      <% } else { %>
        <a href="/login" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white">
          <i class="fas fa-sign-in-alt mr-2"></i> Login
        </a>
      <% } %>
    </nav>
  </div>

  <!-- Mobile Menu Button -->
  <div class="md:hidden fixed top-4 left-4 z-50">
    <button id="menu-toggle" class="text-white focus:outline-none">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Main Content -->
  <div class="main-content md:ml-64 p-6 min-h-screen">
    <h1 class="text-4xl font-bold text-center mb-6">Users</h1>

    <% if (!user) { %>
      <p class="text-gray-400 text-center">Please <a href="/login" class="text-blue-400 hover:underline">log in</a> to view users.</p>
    <% } else if (users.length === 0) { %>
      <p class="text-gray-400 text-center">No users found.</p>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% users.forEach(user => { %>
          <div class="user-card bg-gray-800 bg-opacity-90 backdrop-blur-md p-3 rounded-md shadow-md border border-gray-700 hover:border-blue-500 transition-all duration-300 flex items-center gap-4">
            <!-- User Icon -->
            <div class="w-12 h-12 rounded-full flex items-center justify-center bg-gradient-to-r from-blue-500 to-purple-600 shadow-md">
              <i class="fas fa-user text-lg text-white"></i>
            </div>

            <!-- Username & Details -->
            <div class="flex-1">
              <a href="/user/<%= user.id %>" class="text-lg font-bold text-white hover:text-blue-400 transition-colors duration-200">
                <%= user.name %>
              </a>
              <p class="text-gray-400 text-xs mt-1">
                <i class="fas fa-boxes mr-1"></i> <%= user.partCount || 0 %> Parts
              </p>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <!-- JavaScript for Mobile Menu Toggle -->
  <script>
    const menuToggle = document.getElementById('menu-toggle');
    const sidebar = document.getElementById('sidebar');
    menuToggle.addEventListener('click', () => {
      sidebar.classList.toggle('-translate-x-full');
    });
  </script>

</body>
</html>
