<!DOCTYPE html>
<html>

<head>
  <title>
    <%= part.name %> - PC Builds
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    body {
      background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
      background-size: 200% 200%;
      animation: gradientShift 15s ease infinite;
    }

    .hashtag-button {
  display: inline-block;
  background: #4b5563; /* bg-gray-700 */
  color: #e5e7eb; /* text-gray-200 */
  padding: 0.25rem 0.75rem; /* px-3 py-1 */
  border-radius: 9999px; /* rounded-full */
  font-size: 0.75rem; /* text-xs */
  font-weight: 500; /* font-medium */
  margin-right: 6px;
  margin-bottom: 6px;
  transition: background-color 0.2s ease; /* transition-colors duration-200 */
}
.hashtag-button:hover {
  background: #6b7280; /* hover:bg-gray-600 */
  text-decoration: none;
}

    @keyframes gradientShift {
      0% {
        background-position: 0% 0%;
      }

      50% {
        background-position: 100% 100%;
      }

      100% {
        background-position: 0% 0%;
      }
    }

    .part-container {
      background: rgba(20, 30, 50, 0.9);
      border: 1px solid rgba(100, 150, 255, 0.3);
      box-shadow: 0 0 20px rgba(100, 150, 255, 0.2);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .part-container:hover {
      transform: translateY(-5px);
      box-shadow: 0 0 30px rgba(100, 150, 255, 0.4);
    }

    .hashtag {
      background: rgba(100, 150, 255, 0.2);
      transition: all 0.3s ease;
    }

    .hashtag:hover {
      background: rgba(100, 150, 255, 0.5);
    }
  </style>
</head>

<body class="text-white font-roboto min-h-screen">
  <div
    class="sidebar fixed inset-y-0 left-0 w-64 bg-gray-800 transform transition-transform duration-300 ease-in-out z-50 md:translate-x-0 -translate-x-full"
    id="sidebar">
    <div class="p-4">
      <a href="/" class="text-2xl font-bold text-white">PC Builds</a>
    </div>
    <nav class="mt-4">
      <a href="/" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white"><i
          class="fas fa-compass mr-2"></i> Explore</a>
      <% if (user) { %>
        <a href="/create" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white"><i
            class="fas fa-plus-circle mr-2"></i> Create</a>
        <a href="/my-items" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white"><i
            class="fas fa-box mr-2"></i> My Items</a>
        <a href="/users" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white"><i
            class="fas fa-users mr-2"></i> Users</a>
        <a href="/logout" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white"><i
            class="fas fa-sign-out-alt mr-2"></i> Logout</a>
        <div class="mt-4 px-4 text-gray-400 text-sm"><i class="fas fa-user mr-2"></i> Logged in as <%= user.name %>
        </div>
        <% } else { %>
          <a href="/login" class="block py-2 px-4 text-gray-300 hover:bg-gray-700 hover:text-white"><i
              class="fas fa-sign-in-alt mr-2"></i> Login</a>
          <% } %>
    </nav>
  </div>

  <div class="md:hidden fixed top-4 left-4 z-50">
    <button id="menu-toggle" class="text-white focus:outline-none">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <div class="main-content md:ml-64 p-6">
    <h1 class="text-4xl font-bold mb-8 text-center text-blue-400 drop-shadow-lg">
      <%= part.name %>
    </h1>
    <div class="part-container p-8 rounded-xl max-w-3xl mx-auto">
      <% if (part.thumbnail) { %>
        <img src="<%= part.thumbnail %>" alt="<%= part.name %>" class="w-full h-64 object-cover rounded-md mb-6">
        <% } %>
          <div class="space-y-4 text-sm">
            <div class="flex justify-between"><span class="text-gray-400">Type:</span><span
                class="text-gray-400 capitalize">
                <%= part.type %>
              </span></div>
            <% if (part.socket) { %>
              <div class="flex justify-between"><span class="text-gray-400">Socket:</span><span class="text-gray-400">
                  <%= part.socket %>
                </span></div>
              <% } %>
                <div class="flex justify-between"><span class="text-green-400">Price:</span><span
                    class="text-green-400">$<%= part.price %></span></div>
                <div class="flex justify-between"><span class="text-gray-300">By:</span><span class="text-gray-300"><a
                      href="/user/<%= part.userId %>" class="text-blue-400 hover:underline">
                      <%= part.user %>
                    </a></span></div>
                <div class="flex justify-between"><span class="text-gray-400">Public:</span><span class="text-gray-400">
                    <%= part.isPublic ? 'Yes' : 'No' %>
                  </span></div>
          </div>
          <% if (part.previews && part.previews.length) { %>
            <h3 class="text-xl font-medium mt-6 mb-2 text-blue-400">Previews</h3>
            <div class="flex flex-wrap gap-4">
              <% part.previews.forEach(preview=> { %>
                <img src="<%= preview %>" class="w-32 h-auto rounded-md">
                <% }) %>
            </div>
            <% } %>
              <% if (part.extraDetails && part.extraDetails.length) { %>
                <h3 class="text-xl font-medium mt-6 mb-2 text-blue-400">Extra Details</h3>
                <div class="space-y-2">
                  <% part.extraDetails.forEach(detail=> { %>
                    <div class="flex justify-between"><span class="text-gray-400">
                        <%= detail.name %>:
                      </span><span class="text-gray-400">
                        <% if (detail.value.startsWith('http://') || detail.value.startsWith('https://') ||
                          detail.value.startsWith('tg://')) { %><a href="<%= detail.value %>" target="_blank"
                            rel="noopener noreferrer" class="text-blue-400 hover:underline break-all">
                            <%= detail.value %>
                          </a>
                          <% } else { %>
                            <%= detail.value %>
                              <% } %>
                      </span></div>
                    <% }) %>
                </div>
                <% } %>
                  <% if (part.hashtags && part.hashtags.length> 0) { %>
                    <div class="mt-4">
                      <span class="text-gray-400">Hashtags:</span>
                      <div class="flex flex-wrap gap-2 mt-1">
                        <% part.hashtags.forEach((tag)=> { %>
                          <a href="/hashtag/<%= tag.slice(1) %>" class="hashtag-button">
                            <%= tag %>
                          </a>
                          <% }) %>
                      </div>
                    </div>
                    <% } %>
                      <% if (user && user.id===part.userId) { %>
                        <a href="/edit-part/<%= part.id %>" class="mt-6 inline-block text-blue-400 hover:underline"><i
                            class="fas fa-edit mr-1"></i> Edit</a>
                        <% } %>
    </div>
  </div>

  <script>
    const menuToggle = document.getElementById('menu-toggle');
    const sidebar = document.getElementById('sidebar');
    menuToggle.addEventListener('click', () => {
      sidebar.classList.toggle('-translate-x-full');
    });
  </script>
</body>

</html>